[build-system]
requires = ["sip >=6.6.2, <7", "PyQt-builder >=1.6, <2"]
build-backend = "sipbuild.api"

# Specify the PEP 566 metadata for the project.
[project]
name = "REOS"
version = "@COMPLETE_API_VERSION@"
description = "Python bindings for REOS System"
urls = { "Homepage" = "https://www.reos.site" }
authors = [{name = "Vincent Cloarec", email = "your-email@example.com"}]
dependencies = ["PyQt5"]

# Optional: Explicitly list all required Qt modules for SIP
[tool.sip]
qt-modules = ["QtCore", "QtWidgets", "QtNetwork", "QtXml", "QtSql", "QtPrintSupport", "QtPositioning"]

